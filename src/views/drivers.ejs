<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <h1 style="color: var(--text-primary); font-weight: 700; font-size: 2rem; margin-bottom: 0.25rem;">
      Driver Management
    </h1>
    <p class="text-muted mb-0" style="font-size: 1rem;">
      Manage registered drivers and their verification pass codes
    </p>
  </div>
  <div class="d-flex gap-2">
    <button class="btn btn-outline-secondary" id="uploadDriversBtn" data-role="admin,logistics_manager">⬆️ Upload Excel</button>
    <button class="btn btn-primary" id="addDriverBtn" data-role="admin,logistics_manager">➕ Add Driver</button>
  </div>
</div>

<div id="driverAlert" class="alert d-none" role="alert"></div>

<div class="card mb-3">
  <div class="card-body">
    <div class="row g-3 align-items-end">
      <div class="col-md-4">
        <label for="driverStatusFilter" class="form-label">Status</label>
        <select id="driverStatusFilter" class="form-select">
          <option value="">All</option>
          <option value="active">Active</option>
          <option value="inactive">Inactive</option>
        </select>
      </div>
      <div class="col-md-4">
        <label for="driverSearchInput" class="form-label">Search</label>
        <input type="text" id="driverSearchInput" class="form-control" placeholder="Search by name">
      </div>
      <div class="col-md-4">
        <button class="btn btn-outline-secondary w-100" id="clearDriverFilters">Clear Filters</button>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h3 class="card-title mb-0">Registered Drivers</h3>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0" id="driversTable">
        <thead class="table-light">
          <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Pass Code</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="driversTableBody">
          <tr>
            <td colspan="6" class="text-center py-3 text-muted">Loading drivers...</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="d-flex justify-content-between align-items-center p-3 border-top">
      <div class="text-muted" id="driverPageInfo">Showing 0 of 0 drivers</div>
      <nav aria-label="Drivers pagination">
        <ul class="pagination pagination-sm mb-0" id="driverPagination"></ul>
      </nav>
    </div>
  </div>
</div>

<!-- Add / Edit Driver Modal -->
<div id="driverModal" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3 id="driverModalTitle">Add Driver</h3>
        <button type="button" data-modal-close="driverModal">&times;</button>
      </div>
      <div class="modal-body">
        <form id="driverForm" novalidate autocomplete="off">
          <input type="hidden" id="driverId" name="id">
          <div class="form-group mb-3">
            <label for="driverName" class="form-label">Name *</label>
            <input type="text" id="driverName" name="name" class="form-control" required>
          </div>
          <div class="form-group mb-3">
            <label for="driverStatus" class="form-label">Status *</label>
            <select id="driverStatus" name="status" class="form-control" required>
              <option value="active">Active</option>
              <option value="inactive">Inactive</option>
            </select>
          </div>
          <div class="form-group mb-1">
            <label for="driverPassCode" class="form-label">Pass Code (4 digits) *</label>
            <!-- Use a numeric one-time code field instead of a password field to discourage password managers -->
            <input
              type="tel"
              id="driverPassCode"
              name="driverPassCodeInput"
              class="form-control"
              maxlength="4"
              inputmode="numeric"
              pattern="\\d{4}"
              autocomplete="one-time-code"
              required
            >
            <div class="form-text text-muted">4-digit verification code used during vehicle movements (not a login password).</div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline" data-modal-close="driverModal">Cancel</button>
        <button type="submit" form="driverForm" class="btn btn-primary">Save Driver</button>
      </div>
    </div>
  </div>
</div>

<!-- Bulk Upload Drivers Modal -->
<div id="driverUploadModal" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3>Upload Drivers</h3>
        <button type="button" data-modal-close="driverUploadModal">&times;</button>
      </div>
      <div class="modal-body">
        <form id="driverUploadForm" novalidate>
          <div id="driverUploadError" class="alert alert-danger d-none" role="alert"></div>
          <div class="mb-3">
            <label for="driverUploadInput" class="form-label">Select .xlsx or .xls file</label>
            <input type="file" class="form-control" id="driverUploadInput" accept=".xlsx,.xls" required>
            <div class="form-text">Required columns: Name, Pass Code (4 digits). Optional: Status (active/inactive).</div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline" data-modal-close="driverUploadModal">Cancel</button>
        <button type="submit" form="driverUploadForm" class="btn btn-primary">Upload</button>
      </div>
    </div>
  </div>
</div>

<script src="/js/drivers.js"></script>
