              class="form-control secure-input"
              id="movementDriverPassCode"
              name="movementDriverCode"
              maxlength="4"
              inputmode="numeric"
              pattern="\d{4}"
              placeholder="Enter 4-digit pass code"
              autocomplete="one-time-code"
              required
