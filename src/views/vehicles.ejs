<!-- Vehicles Table -->
<div class="card">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0" id="vehiclesTable">
        <thead class="table-light">
          <tr>
            <th>License Plate</th>
            <th>Vehicle Details</th>
            <th>Department</th>
            <th>Assigned Driver</th>
            <th>Mileage</th>
