              <label for="editAssignedDriver" class="form-label">Assigned Driver</label>
              <input type="text" class="form-control" id="editAssignedDriver" name="assignedDriver">
            </div>
            <div class="col-md-6">
              <label for="editMileage" class="form-label">Current Mileage</label>
              <input type="number" class="form-control" id="editMileage" name="mileage" min="0" step="0.1">
            </div>
            <div class="col-md-6">
              <label for="editVehicleStatus" class="form-label">Status</label>
              <select class="form-select" id="editVehicleStatus" name="status">
                <option value="active">Active</option>
                <option value="inactive">Inactive</option>
                <option value="maintenance">In Maintenance</option>
                <option value="retired">Retired</option>
              </select>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Update Vehicle</button>
        </div>
      </form>
    </div>
  </div>
</div>

